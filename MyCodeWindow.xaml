<Window x:Class="ChatApp2.MyCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp2"
        mc:Ignorable="d"
        Title="Отправка файла в чат" Height="150" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Необходимо ввести имя для отправки файла:"></TextBlock>
        <TextBox MaxLength="20" Name="TBoxName" Margin="5" Width="auto" Height="20"></TextBox>
            <DockPanel LastChildFill="True">
            <Button IsDefault="True" Name="BtnConfirm" Click="BtnConfirm_Click" Width="115" Content="Подтвердить" Margin="5" Height="20"></Button>
                <Button IsCancel="True" Content="Отменить" Margin="5" Height="20"></Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
